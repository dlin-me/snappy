<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
      <parameter key="dlin.pdf_service.class">Dlin\Snappy\Service\PdfService</parameter>
      <parameter key="dlin.pdf_service.wkhtmltopdf">/Applications/wkhtmltopdf.app/Contents/MacOS/wkhtmltopdf</parameter>
    </parameters>

    <services>
        <service id="dlin.pdf_service" class="%dlin.pdf_service.class%">
          <argument on-invalid="ignore">%dlin.pdf_service.wkhtmltopdf%</argument>
        </service>
    </services>
</container>
