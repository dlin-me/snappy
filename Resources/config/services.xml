<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
      <parameter key="dlin.service.pdf">Dlin\Snappy\Service\PdfService</parameter>
      <parameter key="dlin.pdf_service.wkhtmltopd">/Applications/wkhtmltopdf.app/Contents/MacOS/wkhtmltopdf</parameter>
    </parameters>

    <services>
        <service id="dlin.pdf_service" class="%dlin.service.pdf%">
          <argument key="wkhtmltopdf">%dlin.pdf_service.wkhtmltopdf%</argument>
        </service>
    </services>
</container>
